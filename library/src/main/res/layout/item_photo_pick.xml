<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_pick_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F2F7FD"
    android:clickable="true">

    <com.rain.library.weidget.GalleryImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/layout_margin_4dp"/>

    <TextView
        android:id="@+id/txv_isGif"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_tag"
        android:textSize="11sp"
        android:textColor="@color/color_white"
        android:text="@string/gif"/>

    <TextView
        android:id="@+id/txv_long_chart"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_tag"
        android:textSize="11sp"
        android:textColor="@color/color_white"
        android:text="@string/long_image"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/txv_duration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:background="@mipmap/bg_video_info"
        android:drawableLeft="@mipmap/icon_video"
        android:drawablePadding="5dp"
        android:textSize="11sp"
        android:textColor="@color/color_white"
        android:text="00:00"/>
</RelativeLayout>
